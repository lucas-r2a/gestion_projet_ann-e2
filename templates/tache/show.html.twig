{% extends 'base.html.twig' %}

{% block title %}Tache{% endblock %}

{% block body %}
    <h1 class="mb-4 fw-bold">Tache</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tache.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ tache.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tache.description }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ tache.dateDebut ? tache.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin_prevue</th>
                <td>{{ tache.dateFinPrevue ? tache.dateFinPrevue|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin_reelle</th>
                <td>{{ tache.dateFinReelle ? tache.dateFinReelle|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ tache.statut }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tache_index') }}" class="btn btn-secondary mt-3">‚üµ Return</a>

    <a href="{{ path('app_tache_edit', {'id': tache.id}) }}" class="btn btn-secondary mt-3">edit</a>

    {{ include('tache/_delete_form.html.twig') }}
{% endblock %}
