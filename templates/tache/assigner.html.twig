{% extends 'base.html.twig' %}

{% block title %}Assigner un utilisateur{% endblock %}

{% block body %}
<h2 class="text-2xl font-bold mb-4">Assigner un utilisateur à la tâche "{{ tache.titre }}"</h2>

{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
    {{ form_row(form.user, {'attr': {'class': 'w-full p-2 border rounded'}}) }}

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Assigner</button>
{{ form_end(form) }}

<a href="{{ path('app_tache_show', {'id': tache.id}) }}" class="inline-block mt-4 text-gray-600 hover:underline">Retour au détail</a>
{% endblock %}
