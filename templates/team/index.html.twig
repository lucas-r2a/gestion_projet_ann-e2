{% extends 'base.html.twig' %}

{% block title %}List Team{% endblock %}

{% block body %}
    <h1 class="mb-4 fw-bold">Team index</h1>

    <div class="card p-3">
    <div class="d-flex justify-content-between mb-3">
        <h5 class="fw-semibold text-secondary">All Team</h5>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>
                    <a href="{{ path('app_team_show', {'id': team.id}) }}" class="btn btn-sm btn-warning">show</a>
                    <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-sm btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_team_new') }}" class="btn btn-sm btn-warning">Create new</a>
{% endblock %}
