{% extends 'base.html.twig' %}

{% block title %}{{ team.id ? 'Modifier l’équipe' : 'Créer une équipe' }}{% endblock %}

{% block body %}
<h2 class="text-2xl font-bold mb-6">{{ team.id ? 'Modifier l’équipe' : 'Créer une équipe' }}</h2>

{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
    {{ form_row(form.name, {'attr': {'class': 'w-full border-gray-300 rounded p-2'}}) }}
    <div>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
            {{ team.id ? 'Mettre à jour' : 'Créer' }}
        </button>
    </div>
{{ form_end(form) }}

<a href="{{ path('app_team_index') }}" class="text-blue-600 hover:underline mt-4 inline-block">← Retour à la liste</a>
{% endblock %}
