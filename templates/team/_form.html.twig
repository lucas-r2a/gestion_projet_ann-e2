{{ form_start(form, {attr: {class: 'needs-validation'}}) }}

<div class="card p-4 shadow-sm" style="border-radius: 12px;">
    <h4 class="mb-3 fw-bold">{{ form_title|default('Formulaire') }}</h4>

    <div class="row">
        {# Boucle automatique sur tous les champs du form #}
        {% for field in form %}
            {% if field.vars.name != '_token' %}
                <div class="col-md-6 mb-3">
                    {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}

                    {{ form_widget(field, {
                        'attr': {
                            'class': 'form-control' ~ (field.vars.errors|length > 0 ? ' is-invalid' : '')
                        }
                    }) }}

                    {% if field.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(field) }}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        {% endfor %}
    </div>

    <button class="btn btn-main mt-3 px-4 py-2">
        {{ button_label|default('Enregistrer') }}
    </button>
</div>

{{ form_end(form) }}
