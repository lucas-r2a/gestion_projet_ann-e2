{% extends 'base.html.twig' %}
{% block title %}Assignations{% endblock %}

{% block body %}
<div class="bg-white p-6 rounded-xl shadow">

    <h2 class="text-2xl font-semibold mb-4">Tâches assignées à {{ utilisateur.nomPrenom }}</h2>

    <a href="{{ path('app_utilisateur_add_assignation', {id_utilisateur: utilisateur.idUtilisateur}) }}"
       class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded mb-4 inline-block">
        + Assigner une tâche
    </a>

    <table class="w-full bg-white border-collapse shadow rounded-md overflow-hidden">
        <thead class="bg-gray-200">
            <tr>
                <th class="px-4 py-3">Titre</th>
                <th class="px-4 py-3">Statut</th>
                <th class="px-4 py-3">Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for a in assignations %}
            <tr class="border-b">
                <td class="px-4 py-3">{{ a.tache.titre }}</td>
                <td class="px-4 py-3">{{ a.tache.statut }}</td>
                <td class="px-4 py-3">
                    <form method="post"
                          action="{{ path('app_utilisateur_remove_assignation', {id: a.id}) }}"
                          onsubmit="return confirm('Retirer cette assignation ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('remove_assignation' ~ a.id) }}">
                        <button class="bg-red-600 px-3 py-1 text-white rounded">X</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center py-4 text-gray-500">Aucune assignation</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
