<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Gestion de Projet{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f5f6fa;
        }

        .navbar {
            background: #34495e !important;
        }

        .navbar-brand,
        .nav-link,
        .navbar-nav .nav-link.active {
            color: #ecf0f1 !important;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        }

        .btn-main {
            background-color: #2980b9;
            color: white;
            border-radius: 8px;
        }

        .btn-main:hover {
            background-color: #1f6390;
        }

        .btn-danger {
            border-radius: 8px;
        }

        .table thead {
            background: #2980b9;
            color: white;
        }

        .form-control, .form-select {
            border-radius: 8px;
        }

        .flash {
            border-radius: 10px;
            padding: 12px 18px;
            font-weight: bold;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark px-4">

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navBar">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navBar">
        <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link" href="{{ path('app_projet_index') }}">Projets</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('app_tache_index') }}">TÃ¢ches</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('app_team_index') }}">Team</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('app_user_index') }}">User</a></li>
        </ul>
    </div>
</nav>

<div class="container mt-4">

    {# FLASH MESSAGES #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} flash mb-3">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}

</body>
</html>
