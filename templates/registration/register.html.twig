{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="flex justify-center mt-10">
    <div class="w-full max-w-md">
        <div class="bg-white shadow-md rounded-lg p-8">
            <h1 class="text-2xl font-bold text-center mb-6">Register</h1>

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

                <div>
                    {{ form_label(registrationForm.name, 'Name', {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                    {{ form_widget(registrationForm.name, {'attr': {'class': 'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500', 'placeholder': 'Enter your full name'}}) }}
                    {{ form_errors(registrationForm.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500', 'placeholder': 'Enter your email'}}) }}
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500', 'placeholder': 'Enter your password'}}) }}
                    {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="flex items-center space-x-2">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-blue-600'}}) }}
                    {{ form_label(registrationForm.agreeTerms, 'I agree to the terms', {'label_attr': {'class': 'text-gray-700'}}) }}
                    {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'text-red-500 text-sm'}}) }}
                </div>

                <div>
                    <button type="submit" class="w-full bg-blue-600 text-white font-medium py-2 rounded hover:bg-blue-700 transition-colors">Register</button>
                </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
