{% extends 'base.html.twig' %}
{% block title %}Liste des projets{% endblock %}

{% block body %}
<div class="bg-white p-6 rounded-xl shadow">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-semibold">Projets</h2>

        <a href="{{ path('app_projet_new') }}"
           class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md">
            + Nouveau projet
        </a>
    </div>

    <table class="w-full border-collapse bg-white shadow rounded-md overflow-hidden">
        <thead class="bg-gray-200">
            <tr>
                <th class="px-4 py-3 text-left">Nom</th>
                <th class="px-4 py-3 text-left">Description</th>
                <th class="px-4 py-3">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for p in projets %}
            <tr class="border-b">
                <td class="px-4 py-3 font-semibold">{{ p.name }}</td>
                <td class="px-4 py-3">{{ p.description|slice(0, 60) ~ '...' }}</td>
                <td class="px-4 py-3 flex gap-2 justify-center">
                    <a href="{{ path('app_projet_show', {id: p.id}) }}"
                       class="px-3 py-1 bg-blue-500 text-white rounded">Voir</a>
                    <a href="{{ path('app_projet_edit', {id: p.id}) }}"
                       class="px-3 py-1 bg-yellow-500 text-white rounded">Éditer</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3" class="text-center py-4 text-gray-500">Aucun projet trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
