{% extends 'base.html.twig' %}

{% block title %}Liste des projets{% endblock %}

{% block body %}
    <h1 class="mb-4 fw-bold">Projet index</h1>

    <div class="card p-3">
    <div class="d-flex justify-content-between mb-3">
        <h5 class="fw-semibold text-secondary">All Projets</h5>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Date_debut</th>
                <th>Date_fin_prevue</th>
                <th>Date_fin_reelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.name }}</td>
                <td>{{ projet.description }}</td>
                <td>{{ projet.dateDebut ? projet.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ projet.dateFinPrevue ? projet.dateFinPrevue|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ projet.dateFinReelle ? projet.dateFinReelle|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_projet_show', {'id': projet.id}) }}" class="btn btn-sm btn-secondary">show</a>
                    <a href="{{ path('app_projet_edit', {'id': projet.id}) }}" class="btn btn-sm btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_projet_new') }}"  class="btn btn-sm btn-warning">Create new</a>
{% endblock %}
