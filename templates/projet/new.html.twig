{% extends 'base.html.twig' %}
{% block title %}Nouveau projet{% endblock %}

{% block body %}
<div class="bg-white p-6 rounded-xl shadow max-w-xl mx-auto">
    <h2 class="text-2xl font-semibold mb-4">Cr√©er un projet</h2>

    {{ form_start(form) }}

        <div class="mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
        </div>

        <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
            Enregistrer
        </button>

    {{ form_end(form) }}
</div>
{% endblock %}
