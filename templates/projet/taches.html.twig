{% extends 'base.html.twig' %}
{% block title %}Tâches du projet{% endblock %}

{% block body %}
<div class="bg-white p-6 rounded-xl shadow">

    <h2 class="text-2xl font-semibold mb-4">Tâches du projet : {{ projet.name }}</h2>

    <a href="{{ path('app_tache_new') }}"
       class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded mb-4 inline-block">
        + Ajouter une tâche
    </a>

    <table class="w-full bg-white border-collapse shadow rounded-md overflow-hidden">
        <thead class="bg-gray-200">
            <tr>
                <td class="px-4 py-3">Titre</td>
                <td class="px-4 py-3">Description</td>
                <td class="px-4 py-3">Actions</td>
            </tr>
        </thead>

        <tbody>
        {% for t in taches %}
            <tr class="border-b">
                <td class="px-4 py-3">{{ t.titre }}</td>
                <td class="px-4 py-3">{{ t.description }}</td>
                <td class="px-4 py-3">
                    <form method="post"
                          action="{{ path('app_tache_delete', {'tache': t.id}) }}"
                          onsubmit="return confirm('Retirer cette tâche ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('remove_tache' ~ t.id) }}">
                        <button class="bg-red-600 px-3 py-1 text-white rounded">X</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center py-4 text-gray-500">Aucune tâche dans ce projet</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
