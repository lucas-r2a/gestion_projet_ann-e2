{% extends 'base.html.twig' %}
{% block title %}Équipes du projet{% endblock %}

{% block body %}
<div class="bg-white p-6 rounded-xl shadow">

    <h2 class="text-2xl font-semibold mb-4">Équipes liées à : {{ projet.nom }}</h2>

    <a href="{{ path('app_projet_add_equipe', {id_projet: projet.idProjet}) }}"
       class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded mb-4 inline-block">
        + Lier une équipe
    </a>

    <table class="w-full bg-white border-collapse shadow rounded-md overflow-hidden">
        <thead class="bg-gray-200">
            <tr>
                <th class="px-4 py-3">Nom équipe</th>
                <th class="px-4 py-3">Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for e in equipes %}
            <tr class="border-b">
                <td class="px-4 py-3">{{ e.nom }}</td>
                <td class="px-4 py-3">
                    <form method="post"
                          action="{{ path('app_projet_remove_equipe', {id: e.idAssociation}) }}"
                          onsubmit="return confirm('Retirer cette équipe ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('remove_equipe' ~ e.idAssociation) }}">
                        <button class="bg-red-600 px-3 py-1 text-white rounded">X</button>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2" class="text-center py-4 text-gray-500">Aucune équipe liée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
